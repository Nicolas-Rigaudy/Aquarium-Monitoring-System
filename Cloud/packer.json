{
  "variables":{
    "project_id": "{{env SCW_DEFAULT_PROJECT_ID}}",
    "access_key": "{{env SCW_ACCESS_KEY}}",
    "secret_key": "{{env SCW_SECRET_KEY}}"
    },
  "builders": [
    {
      "project_id": "{{ user `project_id` }}",                        
      "access_key": "{{ user `access_key` }}",                                     
      "secret_key": "{{ user `secret_key` }}",
      "server_name": "apache",
      "image_name": "ubuntu-apache",
      "snapshot_name": "ubuntu-apache-snapshot",
      "type": "scaleway",
      "image": "<BASE_IMAGE_ID>",
      "zone": "fr-par-1",
      "commercial_type": "DEV1-S",
      "ssh_private_key_file": "/Users/myaccount/.ssh/id_rsa",
      "ssh_username": "root"
    }
  ],
  "provisioners": [
   {   
     "type": "shell",
     "inline": [
         "sleep 30",
         "apt-get update",
         "apt-get -y upgrade",
         "apt-get install -y apache2"
     ]   
   }   
 ]
}